    link(href='/index/index.css' rel='stylesheet')
    link(href='/resources/hipster.png' rel='icon')
  body
    a(href='https://github.com/coffeecodecouch/hipster-domain-finder')
      img(style='position: absolute; top: 0; right: 0; border: 0;' src='https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67' alt='Fork me on GitHub' data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png')
    .header
      a(href='/')
        img(src='/resources/hipster.png')
    .subtitle
      | Find OG domain hacks with Hipster Domain Finder.
      br
      | Made with obscurity by 
      a(href='https://twitter.com/coffeecodecouch') @coffeecodecouch
      | .
      br
      | Updated every 24 hours.
      noscript
        br
        br
        | Don't like JavaScript? 
        a(href='https://github.com/coffeecodecouch/hipster-domain-finder/issues/10')
          | Help build non-JS support
        | .
    .list
      - for (var i = 0; i < domains.length; i += 3) {
        - if(i != 0 && i % 12 == 0) {
          .sep
        - }
        .row
          a(href='?d=' + domains[i].name)
            .domain=domains[i].name

          - if(domains.length > i + 1) {
            a(href='?d=' + domains[i+1].name)
              .domain=domains[i+1].name
          - }

          - if(domains.length > i + 2) {
            a(href='?d=' + domains[i+2].name)
              .domain=domains[i+2].name
          - }
      - }
    .page
      - var prev = parseInt(page) - 1
      - var next = parseInt(page) + 1

      - if(page > 1) {
        a(href='/p/' + prev) prev
      - }
      - else {
        a.dull prev
      - }

      .num=page

      - if(domains.length == 60) {
        a(href='/p/' + next) next
      - }
      - else {
        a.dull no more :(
      - }
    a.twitter(href='https://twitter.com/coffeecodecouch')
      img(src='/resources/twitter.png')
    .footer
      a(href='http://www.gandi.net')
        | Proudly made using 
